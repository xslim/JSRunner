source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '8.0'

#inhibit_all_warnings!

target "JSRunner", :exclusive => true do
    pod 'CYRTextView', :head
    pod 'SSZipArchive'
    pod 'FHSegmentedViewController', :head
    pod 'TKFormKit', :git => 'https://github.com/xslim/TKFormKit.git'
    pod 'ionicons'
end

target "JSRunnerKit", :exclusive => true do
    pod 'Nodelike', :git => 'https://github.com/xslim/Nodelike.git'
    pod 'JavaScriptBridgeLib', :path => 'https://github.com/xslim/JavaScriptBridge.git'
    
    pod 'Cordova', :head
    
    pod 'CocoaLumberjack'
    
    pod 'FCFileManager', :git => 'https://github.com/xslim/FCFileManager.git'
    
    pod 'IGJavaScriptConsole', :configurations => ['Debug']
end

target "JSRunnerAction", :exclusive => true do
    pod 'TKFormKit', :git => 'https://github.com/xslim/TKFormKit.git'
    pod 'ionicons'
end

